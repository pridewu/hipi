	<tr><th>用户名</th><td><input type="hidden" name="id" value="{$user['id']}"/><input type="text" id="name" name="name" value="{$user['name']}"/><em>*</em></td></tr>
	<tr><th>状态</th><td>{$statusHtml}</td></tr>
	<tr><th>所属角色</th>	<td>{$roleHtml} <em>*</em></td></tr>
